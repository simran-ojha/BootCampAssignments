<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bedroom_id"
        android:layout_width="135dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/Orange">
        <TextView
            android:id="@+id/bedroom_text_id"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Bedroom"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kitchen_id"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="30dp"
        android:background="@color/PaleTurquoise">

        <TextView
            android:id="@+id/kitchen_text_id"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Kitchen"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hall_id"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="165dp"
        android:background="@color/Gold">

        <TextView
            android:id="@+id/hall_text_id"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:text="Hall"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_id"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="185dp"
        android:background="@color/Plum">

        <TextView
            android:id="@+id/store_text_id"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Store Room" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/red_box_id"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="280dp"
        android:background="@color/Red"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/purple_box_id"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="280dp"
        android:background="@color/Orchid"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_green_id"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="480dp"
        android:background="@color/Green"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_red_id"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="490dp"
        android:layout_marginStart="280dp"
        android:background="@color/Red"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/pet_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="460dp"
        android:text="Pet"
        android:textSize="15dp"
        android:paddingLeft="35dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_id"
        android:background="@drawable/circle"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp">

    </LinearLayout>

</RelativeLayout>